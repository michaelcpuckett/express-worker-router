{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "WebWorker", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["./bin/*", "./src/**/*"]
}
